<p id="notice" class="bg-success"><%= notice %></p>

<h1>Salas de aula</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= Classroom.human_attribute_name(:id) %></th>
      <th><%= Classroom.human_attribute_name(:student) %></th>
      <th><%= Classroom.human_attribute_name(:course) %></th>
      <th><%= Classroom.human_attribute_name(:entry_at) %></th>
      <th class="center">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @classrooms.each do |classroom| %>
      <tr>
        <td><%= classroom.id %></td>
        <td><%= classroom.student %></td>
        <td><%= classroom.course %></td>
        <td><%= classroom.entry_at %></td>
        <td class="center" colspan="3">
          <%= link_to 'Exibir', classroom, class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Editar', edit_classroom_path(course), class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Excluir', classroom, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-primary btn-sm' %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Novo', new_classroom_path, class: 'btn btn-success' %>
