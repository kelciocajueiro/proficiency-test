<p id="notice" class="bg-success"><%= notice %></p>

<h1>Estudantes</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= Student.human_attribute_name(:id) %></th>
      <th><%= Student.human_attribute_name(:name) %></th>
      <th class="center"><%= Student.human_attribute_name(:register_number) %></th>
      <th class="center"><%= Student.human_attribute_name(:status) %></th>
      <th class="center">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.id %></td>
        <td><%= student.name %></td>
        <td class="center"><%= student.register_number %></td>
        <td class="center">
          <span class="<%= student.status? ? 'label label-success' : 'label label-danger' %>">
            <%= student.status? ? "ATIVO" : "INATIVO" %>
          </span>
        </td>
        <td class="center" colspan="3">
          <%= link_to 'Exibir', student, class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Editar', edit_student_path(student), class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Excluir', student, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-primary btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Novo', new_student_path, class: 'btn btn-success' %>
