<p id="notice" class="bg-success"><%= notice %></p>

<h1>Cursos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= Course.human_attribute_name(:id) %></th>
      <th><%= Course.human_attribute_name(:name) %></th>
      <th><%= Course.human_attribute_name(:description) %></th>
      <th class="center"><%= Student.human_attribute_name(:status) %></th>
      <th class="center">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.id %></td>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td class="center">
          <span class="<%= course.status? ? 'label label-success' : 'label label-danger' %>">
            <%= course.status? ? "ATIVO" : "INATIVO" %>
          </span>
        </td>
        <td class="center" colspan="3">
          <%= link_to 'Exibir', course, class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Editar', edit_course_path(course), class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Excluir', course, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-primary btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Novo', new_course_path, class: 'btn btn-success' %>
